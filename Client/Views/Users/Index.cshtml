@model List<Shared.DTOs.UserDTO>

<h2>User List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var user in Model)
            {
                <tr>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>
                        <a href="@Url.Action("Details", "User", new { id = user.UserId })">View Details</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <p>Khong co</p>
        }
    </tbody>
</table>
